    <script>
        let currentStep = 1;
        const totalSteps = 5;
        let quizStarted = false;
        let currentQuestion = 0;
        let score = 0;
        let userAnswers = [];
        let correctChoices = 0;
        let basePairingComplete = false;
        let processingComplete = false;
        
        const questions = [
            {
                question: "Where does transcription take place in eukaryotic cells?",
                options: ["Cytoplasm", "Nucleus", "Ribosome", "Mitochondria"],
                correct: 1,
                explanation: "Transcription occurs in the nucleus where DNA is located!"
            },
            {
                question: "What enzyme is responsible for making mRNA from DNA?",
                options: ["DNA polymerase", "RNA polymerase", "Ligase", "Helicase"],
                correct: 1,
                explanation: "RNA polymerase is like the cell's photocopier for making RNA copies!"
            },
            {
                question: "In RNA, which base pairs with Adenine (A)?",
                options: ["Thymine (T)", "Guanine (G)", "Uracil (U)", "Cytosine (C)"],
                correct: 2,
                explanation: "Remember: RNA uses Uracil (U) instead of Thymine (T)!"
            },
            {
                question: "What are introns?",
                options: ["Coding sequences", "Non-coding sequences that are removed", "Start codons", "Stop codons"],
                correct: 1,
                explanation: "Introns are the 'junk' parts that get cut out during mRNA processing!"
            },
            {
                question: "Why does RNA use Uracil instead of Thymine?",
                options: ["It's more stable", "It's easier for the cell to make", "It pairs better", "It's smaller"],
                correct: 1,
                explanation: "RNA uses Uracil because it's easier to make and RNA is temporary!"
            }
        ];
        
        function makeChoice(step, isCorrect, feedback) {
            const buttons = document.querySelectorAll(`[data-step="${step}"] .choice`);
            const feedbackEl = document.getElementById(`feedback-${step}`);
            const descriptionEl = document.getElementById(`description-${step}`);
            const nextBtn = document.getElementById(`next-${step}`);
            
            buttons.forEach(btn => {
                btn.disabled = true;
                if (btn.onclick.toString().includes('true')) {
                    btn.classList.add('correct');
                } else if (btn === event.target && !isCorrect) {
                    btn.classList.add('incorrect');
                }
            });
            
            feedbackEl.textContent = feedback;
            feedbackEl.classList.add('show');
            
            if (isCorrect) {
                correctChoices++;
                setTimeout(() => {
                    descriptionEl.style.display = 'block';
                    nextBtn.classList.add('show');
                    nextBtn.style.display = 'inline-block';
                    updateProgress();
                }, 1500);
            } else {
                setTimeout(() => {
                    buttons.forEach(btn => {
                        btn.disabled = false;
                        btn.classList.remove('correct', 'incorrect');
                    });
                    feedbackEl.classList.remove('show');
                }, 2000);
            }
        }
        
        function​​​​​​​​​​​​​​​​
```
